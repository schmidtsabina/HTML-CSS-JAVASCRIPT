<body>
    <div id="culoripredefinite">
    </div>

    <div id="culorirandom">
    </div>

    <script>
        var culoripredefiniteDiv = document.getElementById('culoripredefinite');
        var culorirandomDiv = document.getElementById('culorirandom');

        for (var i = 0; i < 10; i++) {
            culoripredefiniteDiv.innerHTML += '<div class="culoripredefinite" style="background-color: #FFC0CB;">Culoare predefinita</div>';
        }

        for (var i = 0; i < 10; i++) {
            var Culoarerandom = '#' + Math.floor(Math.random() * 16777215).toString(16);
            culorirandomDiv.innerHTML += '<div class="culorirandom" style="background-color: ' + Culoarerandom + ';">Culoare random</div>';
        }
    </script>
