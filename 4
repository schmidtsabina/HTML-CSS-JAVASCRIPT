    <style>
        .culoripredefinite {
            width: 200px;
            height: 100px;
            border: 2px solid pink;
            margin: 10px;
            padding: 10px;
        }

        .culorirandom {
            width: 200px;
            height: 100px;
            border: 2px solid pink;
            margin: 10px;
