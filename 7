<body>

    <div id="NrPoz">
    </div>
    <div id="NrNeg">
    </div>
    <div id="NrMin">
    </div>
    <script>
        var NrPozDiv = document.getElementById("NrPoz");
        var NrNegDiv = document.getElementById("NrNeg");
        var NrMinDiv = document.getElementById("NrMin");
        var sir = [12, ,-2 ,3, 8, 7, -89, -12, 34, 1, 45, 36];

        for (var i = 0; i < sir.length; i++) {
            if (sir[i] > 0) {
                NrPozDiv.innerHTML += sir[i] + ' ';
            } else if (sir[i] < 0 && Math.abs(sir[i]) > 9) {
                NrNegDiv.innerHTML += sir[i] + ' ';
            }
        }

        for (var i = 1; i < sir.length - 1; i++) {
            if (sir[i] > sir[i - 1] && sir[i] < sir[i + 1]) {
                NrMinDiv.innerHTML += sir[i] + ' ';
            }
        }
    </script>
