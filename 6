<body>
    <div id="text">
        1ala2bala3porto4cala5
    </div>
    <div id="litere">
    </div>
    <div id="cifre">
    </div>
    <div id="inlocuire">
    </div>
    <script>
        var textcontainer = document.getElementById('text');
        var litereDiv = document.getElementById("litere");
        var cifreDiv = document.getElementById("cifre");
        var inlocuireDiv = document.getElementById("inlocuire");
        var text = textcontainer.textContent;

        var litere = '';
        var cifre = '';
        
        for (var i = 0; i < text.length; i++) {
            if (/[a-zA-Z]/.test(text[i])) {
                litere += text[i];
            } else if (/[0-9]/.test(text[i])) {
                cifre += text[i];
            }
        }

        litereDiv.innerHTML = litere;
        cifreDiv.innerHTML = cifre;

        var textinlocuit = text.replace(/\d/g, '*');
        inlocuireDiv.innerHTML = textinlocuit;
    </script>
</body>
